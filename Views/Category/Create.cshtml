@model Rocky.Models.Category 



<form method="post" asp-action="Create">
    <div class="border p-3">



        <div class="form-group row">
            <h2 class="text-info pl-3">Add Category</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryName" ></label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control" asp-for="CategoryName" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control" asp-for="DisplayOrder" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create">
                        </div>
                        <div class="col">
                            <input asp-action="Index" type="submit" class="btn btn-success w-100" value="Back">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>

</form>


