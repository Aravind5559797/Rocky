@model IEnumerable<Rocky.Models.Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create a New Category </a>
        </div>
    </div>

    <br />
    <br />

    @if (Model.Count() > 0) { 
        <table class="table table-bordered table-hover">
            <thead >
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>
                        @*leave it empty*@ 
                    </th>

                </tr>

            </thead>

            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td >@obj.CategoryName</td>
                    <td >@obj.DisplayOrder</td>
                    <td></td>
                </tr>
                }
            </tbody>
        </table>
    } 
</div>




