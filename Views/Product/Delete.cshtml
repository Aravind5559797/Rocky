@model Rocky.Models.Product

@{
    var title = "Delete Product";
}

<form method="post" asp-action="DeletePost">
    <div class="border p-3">

        <input asp-for="Id" hidden />
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control" asp-for="Name" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input type="number" class="form-control" asp-for="Price" disabled>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ShortDescription"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="ShortDescription" disabled >
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea class="form-control summernote" asp-for="Description"></textarea>
                    </div>
                </div>


                @*Dropdown of categories*@
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Category"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.CategoryName" class="form-control" disabled/>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">

                            <input type="submit" class="btn btn-danger w-100" value="Delete" id="submit_btn" />

                        </div>
                        <div class="col">
                            <a asp-action="Index" type="submit" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                @if (Model.Id != 0)
                {
                    <h3>Current Image</h3>
                    <img src="@WC.ImagePath@Model.Image" class="w-100">
                }
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @*<partial name="_validationscriptspartial.cshtml">*@

    <script>

        //jquery for sumemr note
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250

            }

            );
        });


       
    </script>

}