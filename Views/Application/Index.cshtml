@model IEnumerable<Rocky.Models.Application>


<div class="container">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Application List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary text-white" asp-action="Create">Create new Application</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col">
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                @*Empty*@
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                        <tr >
                            <td>@obj.Name</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Application" asp-action="Edit" class="btn btn-primary  mx-2" asp-route-Id="@obj.Id"><i class="fas fa-edit"></i></a>

                                    <a asp-controller="Application" asp-action="Delete" class="btn btn-danger mx-2" asp-route-Id="@obj.Id"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>

    }


    else
    {
    <div class="text-danger">No Applications available</div>
    }


</div>
